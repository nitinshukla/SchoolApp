<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sqlitedatabaseapp"
    android:versionCode="1"
    android:versionName="1.0" >

    	<uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19" />
    	<uses-feature android:glEsVersion="0x00020000" android:required="true"/>
    	<permission android:name="com.example.sqlitedatabaseapp.permission.MAPS_RECEIVE" android:protectionLevel="signature"/>

    	<uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
		<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
		<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
		<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchResultsActivity" />
        <activity
            android:name="com.example.sqlitedatabaseapp.ShowLocationActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light"
            android:parentActivityName="com.example.sqlitedatabaseapp.TestDatabaseActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sqlitedatabaseapp.TestDatabaseActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light" >


            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.example.sqlitedatabaseapp.SearchResultsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName="com.example.sqlitedatabaseapp.TestDatabaseActivity"
            android:theme="@android:style/Theme.Holo.Light" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sqlitedatabaseapp.TestDatabaseActivity" />
        </activity>
        <activity
            android:name="com.example.sqlitedatabaseapp.SettingPageActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:parentActivityName="com.example.sqlitedatabaseapp.SettingPageActivity"
            android:theme="@android:style/Theme.Holo.Light" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sqlitedatabaseapp.TestDatabaseActivity" />
        </activity>

    </application>

</manifest>
